{
	"name": "@lunarweb/database",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./dist/index.js"
		},
		"./schema": {
			"types": "./src/schema/index.ts",
			"default": "./dist/schema/index.js"
		}
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.2",
		"@lunarweb/env": "workspace:*",
		"@lunarweb/shared": "workspace:*"
	}
}

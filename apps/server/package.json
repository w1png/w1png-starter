{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"check:types": "tsc --noEmit",
		"check:lint": "biome check",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/src/index.js"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@lunarweb/database": "workspace:*",
		"@lunarweb/env": "workspace:*",
		"@lunarweb/files": "workspace:*",
		"@lunarweb/logger": "workspace:*",
		"@lunarweb/redis": "workspace:*",
		"@lunarweb/shared": "workspace:*",
		"@orpc/client": "catalog:",
		"@orpc/server": "catalog:",
		"better-auth": "^1.4.18",
		"dotenv": "^17.3.1",
		"drizzle-orm": "catalog:",
		"elysia": "catalog:",
		"mime-types": "^3.0.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"@types/mime-types": "^3.0.1",
		"tsc-alias": "^1.8.11",
		"typescript": "^5.9.3"
	}
}

    "db:studio": "turbo -F @lunarweb/database db:studio",
    "db:generate": "turbo -F @lunarweb/database db:generate",
    "db:migrate": "turbo -F @lunarweb/database db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.17"
}
